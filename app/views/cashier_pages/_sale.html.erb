<% notice = sale['service_sale_menu_items_details'].map { |e| e['menu_item_details']['mtype'] }.uniq %>
<tr class='row-sale <%= notice.length > 0 ? "danger" : "" %>'  sale-id="<%= sale['id'] %>">
  <td>
    <a href="javascript:;" data-toggle="tooltip" data-placement="top" title='<%= notice.join(", ") %>' sale-id="<%= sale['id'] %>" class='show-sale-details' onclick="showSale(<%= sale['id'] %>)" ><%= sale['invoice_number'] %></a>
  </td>
  <td>
    <%= sale['customer']['email'] %>
  </td>
  <td>
    <span style='display:none'><%= (sale['created_at'].to_datetime + 7.hours).strftime("%Y%m%d%H%M%S") %></span>
    <%= (sale['created_at'].to_datetime + 7.hours).strftime("%d/%m/%Y <b>%H:%M</b>").html_safe %>
  </td>
  <td>
    <span style='display:none'><%= (sale['updated_at'].to_datetime + 7.hours).strftime("%Y%m%d%H%M%S") %></span>
    <%= (sale['updated_at'].to_datetime + 7.hours).strftime("%d/%m/%Y <b>%H:%M</b>").html_safe %>
  </td>
  <td>
    <b><%= number_with_delimiter(sum(sale)) %></b> Ä‘
  </td>
  <td>
    <center>
      <%= display_state(sale['state']).html_safe %>
    </center>
  </td>
</tr>

<script>
  $(".row-sale[sale-id='<%= sale['id'] %>'] [data-toggle='tooltip']").tooltip();
</script>
