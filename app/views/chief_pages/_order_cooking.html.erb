<% @sales_cooking.each do |sale| %>
<article class="order order-cooking" sale-id="<%= sale['id'] %>">
  <div class="row order-info">
    <div class="col-lg-12">
      <label class="label label-primary sale-name"><i class='fa fa-desktop'></i><%= sale['customer']['email'] %></label>
      <span class="sale-code sale-created-at pull-right">
        MÃ HĐ: <%= sale['invoice_number'] %>
        <br>
        NGÀY: <%= (sale['created_at'].to_datetime + 7.hours).strftime("%d/%m/%Y") %>
      </span>
      <br><br>
    </div>
  </div>
  <div class="row service-lists">
    <div class="col-lg-12">
      <ul class="services">
        <% sale['food_sale_menu_items_details'].each do |data| %>
        <% if data['state'] != 'done' %>
        <li class='service' service-id="<%= data['id'] %>">
          <div class="row">
            <div class="col-lg-10 col-md-10 col-sm-10">
              <input type='checkbox' <%= 'checked' if data['state'] == "done" %> class='check-service-done'>
              <span class='service-name'>
                <%= data['menu_item_details']['name'] %>
              </span>
            </div>
            <div class="col-lg-2 col-md-2 col-sm-2">
              <label class='label label-danger service-quantity pull-right'>
                <%= data['quantity'].to_i %>
              </label>
            </div>
          </div>
          <div class="row">
            <div class="col-lg-12">
              <p class='service-description'>
                <%= data['description'] %>
              </p>
            </div>
          </div>
        </li>
        <% end %>
        <% end %>
      </ul>
    </div>
  </div>
  <div class="row order-notes">
    <div class="col-lg-12">
      <p>
        <b>Ghi chú:</b> <span class="note-text"></span>
      </p>
    </div>
  </div>
  <div class="row order-actions">
    <div class="col-lg-12">
      <a href="javascript:;" sale-id="<%= sale['id'] %>" class="btn btn-danger btn-block btn-done-cooking">
        Làm Xong
      </a>
    </div>
  </div>
</article>
<% end %>
