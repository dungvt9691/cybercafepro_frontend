<div class="content">
  <h1> Doanh số bán hàng </h1>
  <table id="sales-table" class="display">
    <thead>
      <th>Id</th>
      <th>Name</th>
      <th>Price</th>
      <th>Unit</th>
      <th>Class</th>
      <th>Quantity</th>
      <th>Customer</th>
      <th>Pender</th>
      <th>Processor</th>
      <th>Maker</th>
      <th>Deliverer</th>
      <th>Saver</th>
      <th>Invoice Number</th>
      <th>Updated At</th>
      <th>Created At</th>
    </thead>
    <tbody>
      <% if @sale_menu_items %>
        <% @sale_menu_items.each do |sale_menu_item| %>
          <%= render partial: 'sale_menu_item_row', locals: { sale_menu_item: sale_menu_item } %>
        <% end %>
      <% end%>
    </tbody>
  </table>

  <script>
    $(document).ready(function(){
      $('#sales-table').DataTable();
    });
  </script>
</div>
