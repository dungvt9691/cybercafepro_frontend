<div class="content">
  <h1> Doanh số bán hàng </h1>
  <table id="sales-table" class="display">
    <thead>
      <th>Id</th>
      <th>State</th>
      <th>Customer</th>
      <th>Pender</th>
      <th>Processor</th>
      <th>Chef</th>
      <th>Deliverer</th>
      <th>Saver</th>
      <th>Invoice Number</th>
      <th>Updated At</th>
      <th>Created At</th>
    </thead>
    <tbody>
      <% if @sales %>
        <% @sales.each do |sale| %>
          <tr>
            <td><%= sale['id'] %></td>
            <td><%= sale['state'] %></td>
            <td><%= "#{sale['customer']['first_name']} #{sale['customer']['last_name']}" rescue sale['customer_id'] %></td>
            <td><%= "#{sale['pender']['first_name']} #{sale['pender']['last_name']}" rescue sale['pender_id'] %></td>
            <td><%= "#{sale['processor']['first_name']} #{sale['processor']['last_name']}" rescue sale['processor_id'] %></td>
            <td><%= "#{sale['chef']['first_name']} #{sale['chef']['last_name']}" rescue sale['chef_id']%></td>
            <td><%= "#{sale['deliverer']['first_name']} #{sale['deliverer']['last_name']}" rescue sale['deliverer_id']%></td>
            <td><%= "#{sale['saver']['first_name']} #{sale['saver']['last_name']}" rescue sale['saver_id'] %></td>
            <td><%= sale['invoice_number'] %></td>
            <td><%= sale['updated_at'] %></td>
            <td><%= sale['created_at'] %></td>
          </tr>
        <% end %>
      <% end%>
    </tbody>
  </table>

  <script>
    $(document).ready(function(){
      $('#sales-table').DataTable();
    });
  </script>
</div>
